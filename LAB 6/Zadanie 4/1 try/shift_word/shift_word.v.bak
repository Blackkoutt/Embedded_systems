module shift_word(input clk, 
						input direction,
						output reg [7:0] char_out);
						
	initial char_out = 8'b00011011; //{2'b00, 2'b01, 2'b10, 2'b11};
	
	always @(negedge clk) begin
		reg [5:0] temp;
		
		// Shift right
		if(direction) begin
			temp = char_out[7:2];
			char_out[7:6] = char_out[1:0];
			char_out[5:0] = temp;
		end
		
		// Shift left
		else begin
			temp = char_out[5:0];
			char_out[1:0] = char_out[7:6];
			char_out[7:2] = temp;
		end
	end
	
endmodule

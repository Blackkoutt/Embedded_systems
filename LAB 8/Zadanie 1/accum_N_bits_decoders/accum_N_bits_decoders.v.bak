module accum_N_bits_decoders #(parameter N=8)(input [N-1:0] A, 
															input clk, aclr,
															output [N-1:0] A_reg_out, S,
															output carry,
															output overflow, 
															output [0:6] H0, H1, H2, H3);
															
	 accum_N_bits #(8) accumulator(A, clk, aclr, A_reg_out, S, carry, overflow);
	 
	 decoder_hex_10 dec_A_0(A[3:0], H2[0:6]);
	 decoder_hex_10 dec_A_1(A[7:4], H3[0:6]);
	 
	 decoder_hex_10 dec_A_0(S[3:0], H0[0:6]);
	 decoder_hex_10 dec_A_1(S[7:4], H1[0:6]);
	 
endmodule

															
	